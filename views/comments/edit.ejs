					  <input class="form-control" type="date" name="comment[date]" value="<%comment.date%>">
					</div>
	               
	                <div class="form-group">
				        <button class="btn btn-success btn-lg ">submit</button>
					 </div>
					<a href="/campgrounds">Go back</a>
                 </form>
                  
		     </div>
                  
	  </div>
</div>
