<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelpcamp</p>
			<div class="list-group">
				<li  class="list-group-item active">Info 1</li>
				<li  class="list-group-item">Info 2</li>
				<li  class="list-group-item">Info 3</li>
				<hr>
				
			</div>
		</div>
		
	
		<div class="col-md-9">
			<div  id="jj" class="thumbnail ">
                   <img src="<%=campground.image%>" class="img-responsive">
				<div class="caption-full">
					<h4 class="pull-right">$<%=campground.price%>/Night </h4>
					<h1><a id="www"><%=campground.name%> </a></h1>
					<p id="aaa"><%=campground.description%></p>
					<p id="size"><strong>Submitted by -</strong> <%=campground.author.username%></p>
					<a class="btn btn-primary btn-xs" href="/campgrounds">Go Back<i  class="fas fa-arrow-circle-left fa-md"></i></a>
					
					<%if (currentUser && campground.author.id.equals(currentUser._id)){%>
					<a  class="btn btn-warning btn-xs" href="/campgrounds/<%=campground._id%>/edit"> Edit</a>
					<form  id="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
						<button  class="btn btn-danger btn-xs"> Delete Post</button>
					</form>
					<%}%>
					
				</div>
	        </div>
		
			
			
			
            <!--Review section-->
            <div class="thumbnail">
                <div class="caption-full">
                    <% if (campground.rating === 0) { %>
                    <h5>
                        <em>No reviews yet.</em>
                    </h5>
                    <% } else { %>
                    <p>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star <% if (campground.rating > 1.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (campground.rating > 2.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (campground.rating > 3.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (campground.rating > 4.5) { %> checked <% } %>"></span>
                        <em>(total reviews: <%= campground.reviews.length %>)</em>
                    </p>
                    <p>
                        Current campground rating: <strong><%= campground.rating.toFixed(2) %></strong>
                    </p>
                    <p>Latest reviews for this campground:</p>
                    <hr style="margin-top: 0;">
                    <% campground.reviews.slice(0, 5).forEach(function(review){ %>
                    <div class="row">
                        <div class="col-md-3">
                            <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                            <div>Review by: <strong><%= review.author.username %></strong></div>
                            <span><em><%= review.updatedAt.toDateString() %></em></span>
                        </div>
                        <div class="col-md-9">
                            <p style="text-align: justify; word-wrap: break-word;">
                                <%= review.text %>
                            </p>
                            <% if(currentUser && review.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning"
                               href="/campgrounds/<%=campground._id %>/reviews/<%=review._id %>/edit">Edit</a>
                            <form id="delete-form" action="/campgrounds/<%=campground._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <% }); %>
                    <div style="margin-bottom: 10px;">
                        <h4><a href="/campgrounds/<%= campground._id %>/reviews"><i class="fa fa-search" aria-hidden="true"></i> See all reviews</a></h4>
                    </div>
                    <% } %>
                    <div>
                        <a class="btn btn-success btn-md <% if (currentUser && campground.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/campgrounds/<%= campground._id %>/reviews/new">
                            Write a New Review</a>
                    </div>
                </div>
            </div>
			
			
			
			
			
			
			
			
			
			
			
			<!--comment section-->
			<div class="well">
				<div class="text-right"><p><a class="btn btn-success"  href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a></p></div>
				 <%campground.comments.forEach(function(comment){%>
				<div class="row">
					<div class="col-md-12">
						<strong><%=comment.author.username%> </strong>
						<span class="pull-right">Created on -<%=comment.date%></span>-
						<p><%=comment.text%></p>
						<%if (currentUser && comment.author.id.equals(currentUser._id)){%>
						<a  class=" btn btn-warning btn-xs" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
						<form id="kk" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
							  <button class=" btn btn-danger btn-xs" >Delete</button>
						</form>
						<%}%>
					</div>
				</div>
	              <%})%>
			</div>
		</div>
		
	</div>
	</div>





<%- include("../partials/footer") %>