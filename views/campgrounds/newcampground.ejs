<%- include("../partials/header") %>
<div class="container">
	   <div class="row">
                  <h1 style="text-align: center;">Create a new camp site !</h1>
		    <div style="width: 30%; margin:25px auto;">
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="name" placeholder="Add Name">
					</div>
					   <div class="form-group">
					  <input class="form-control" type="number" name="price" placeholder="Add price" min="1.00" step="0.25">
					</div>
	                <div class="form-group">
					  <input class="form-control" type="text" name="image" placeholder="Add Image Url">
					</div>
					<div class="form-group">
						
					  <input class="form-control" type="text" name="description" placeholder="Add Description">
					</div>
	                <div class="form-group">
				        <button class="btn btn-success btn-lg ">submit</button>
					 </div>
					<a href="/campgrounds">Go back</a>
                 </form>
                  
		     </div>
                  
	  </div>
</div>
<%- include("../partials/footer") %>